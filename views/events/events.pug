extends ../layout

block content
    .container
        .row
            each event in events
                .row.single-event
                    .col-xs-12.col-sm-3.col-md-3
                        a(href='#')
                            img.img-responsive.img-box.img-thumbnail(src=event.photo)
                    .col-xs-12.col-sm-9.col-md-9
                        h4
                            a(href='/events/'+ event.title) #{event.title}
                        p
                            span.glyphicon.glyphicon-calendar
                            |  #{event.date}
                        p
                            span.glyphicon.glyphicon-time
                            |  #{event.time}
                        p
                            span.glyphicon.glyphicon-map-marker
                            |  #{event.place}
                        p
                            span.glyphicon.glyphicon-tags
                            |   #{event.categories}