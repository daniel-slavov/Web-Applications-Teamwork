extends ../layout

block content
    h1
        | My profile information
    div
        img(src=context.avatar, width="120px", height="120px")
    div
        label Username:
        span#curent-user=context.username
    div
        label First name:
        span=context.firstName
    div
        label Last name:
        span=context.lastName
    div
        label Email:
        span=context.email
    div
        label Age:
        span=context.age
    div
        if currentUser == context.username
            button(id='show-my-events-btn' type="button", class="btn btn-success btn-lg btn-block") Show my events
            button(id='hide-my-events-btn' type="button", class="btn btn-success btn-lg btn-block") Hide my events
        else
            button(id='show-my-events-btn' type="button", class="btn btn-success btn-lg btn-block") Show events
            button(id='hide-my-events-btn' type="button", class="btn btn-success btn-lg btn-block") Hide events
